<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyTheme.MyActionBar</item>
    </style>

    <style name="MyTheme.MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#5fde84</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.Title</item>
    </style>

    <style name="MyTheme.ActionBar.Title" parent="android:TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
    </style>
</resources>